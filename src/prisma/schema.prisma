generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model User {
    address             String @id
    name                String
    profile_picture_url String
    rooms               Room[]
}

model Room {
    name         String  @id
    liveblocksId String  @unique
    is_public    Boolean @default(value: false)
    users        User[]
}
